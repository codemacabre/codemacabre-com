---
layout: base.njk
title: Articles
description: Articles by Myles Lewando
permalink: '/notes/articles'
pagination:
  data: collections.articles
  size: 10
  reverse: true
---

<h2>{{ title }}</h2>
<ul class="wider">
{% for post in pagination.items %}
  <li>
    <a class="title" href="{{ post.url }}">{{ post.data.title }}</a> <span class="category">{{ post.data.category.toUpperCase() }}</span> <span class="dates">(<time datetime="{{ post.data.date }}">{{ post.data.date | date('full') }}</time>)</span>
    <p class="description">{{ post.data.description }}</p>
  </li>
{% endfor %}
</ul>

{% include 'pagination.njk' %}
